<section class="section has-background-primary py-6">
  <div class="container">
    <div class="columns">
      <div class="column is-6">
          <h2 class="mb-16 title is-size-3 has-text-white has-text-weight-bold">Rocca Racing Simulator</br> von RoC-Stahl</h2>
          <a class="button is-white has-text-link has-text-weight-semibold" href="#">Angebot anfordern</a>
      </div>
      <div class="column is-6">
        <div class="is-flex is-flex-direction-column is-justify-content-space-between" style="height: 100%;">
          <div class="columns">
            <div class="column is-4">
              <ul>
                {%- for item in navigation.nav_items // from global data file %}
                  {%- if item.header == true %}
                    <li class="mb-3"><a class="has-text-white has-text-weight-medium" href="{{ item.url }}">{{ item.title }}</a></li>
                  {%- endif %}
                {%- endfor %}
              </ul> 
            </div>
            <div class="column is-4">
              <ul>
                {%- for item in navigation.nav_items // from global data file %}
                  {%- if item.header != true %}
                    <li class="mb-3"><a class="has-text-white has-text-weight-medium" href="{{ item.url }}">{{ item.title }}</a></li>
                  {%- endif %}
                {%- endfor %}
              </ul> 
            </div>
          </div>
          <p class="has-text-white has-text-weight-medium">Copyright Â© 2025 RoC-Stahl. All Rights Reserved</p>
        </div>
      </div>
    </div>
  </div>
</section>